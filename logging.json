{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "standard": {
            "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
        }
    },
    "handlers": {
        "console": {
            "level": "INFO",
            "class": "logging.StreamHandler",
            "formatter": "standard"
        },
        "file": {
            "level": "INFO",
            "class": "logging.FileHandler",
            "formatter": "standard",
            "filename": "app.log",
            "mode": "a"
        }
    },
    "loggers": {
        "": {
            "handlers": [
                "console",
                "file"
            ],
            "level": "INFO",
            "propagate": true
        }
    }
}